include ../Makefile.inc

CPP = ${TCHROOT}/aarch64-xilinx-linux-g++
CPPFLAGS = --sysroot=${SYSROOT} -std=c++11 -march=armv8-a -mtune=cortex-a53 -g -Wall -Os -pthread

STATLIB = ${TCHROOT}/aarch64-xilinx-linux-ar
STATLIBFLAGS = rcs

INCPATH = -I=${WHIZSDKROOT}/build -I=${WHIZSDKROOT}/build/ezdevwskd -I=/usr/include -I=/usr/include/libxml2

OBJS = VecWzskVCall.o VecWzskVDpch.o VecWzskVError.o VecWzskVExpstate.o VecWzskVIop.o VecWzskVJob.o VecWzskVMimetype.o VecWzskVOpengtype.o VecWzskVOppack.o VecWzskVQrystate.o VecWzskVReqitmode.o VecWzskVStub.o VecWzskVTag.o VecWzskVTarget.o

LIB = libvecwzsk

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)

install:
	mv $(LIB).a ${SYSROOT}$(LIBROOT)/

clean:
	rm -f *.o
