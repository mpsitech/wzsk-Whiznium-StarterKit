include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZSKCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswzsk -I$(BUILDROOT)/wzskcmbd/VecWzsk -I$(BUILDROOT)/wzskcmbd/IexWzsk -I$(BUILDROOT)/wzskcmbd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/ezdevwskd -I/usr/include -I/usr/include/libxml2

OBJS = CrdWzskObj.o PnlWzskObjList.o QryWzskObjList.o PnlWzskObjHeadbar.o PnlWzskObjRec.o PnlWzskObjRef1NFile.o QryWzskObjRef1NFile.o PnlWzskObj1NShot.o QryWzskObj1NShot.o PnlWzskObjDetail.o DlgWzskObjNew.o

LIB = libcrdwzskobj

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzskcmbd/

clean:
	rm -f *.o

