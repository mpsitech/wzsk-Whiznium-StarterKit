include ../Makefile.inc

CPP = ${TCHROOT}/arm-xilinx-linux-gnueabi-g++
CPPFLAGS = --sysroot=${SYSROOT} --sysroot=${SYSROOT} -std=c++11 -march=armv7-a -mthumb -mfpu=neon -mfloat-abi=hard -g -Wall -Os -pthread -DWZSKCMBD

STATLIB = ${TCHROOT}/arm-xilinx-linux-gnueabi-ar
STATLIBFLAGS = rcs

INCPATH = -I=$(BUILDROOT)/dbswzsk -I=$(BUILDROOT)/wzskcmbd/VecWzsk -I=$(BUILDROOT)/wzskcmbd/IexWzsk -I=$(BUILDROOT)/wzskcmbd
INCPATH += -I=${WHIZSDKROOT}/build -I=${WHIZSDKROOT}/build/ezdevwskd -I=/usr/include -I=/usr/include/libxml2

OBJS = CrdWzskLlv.o PnlWzskLlvHeadbar.o PnlWzskLlvTermArty.o PnlWzskLlvTermClnxevb.o PnlWzskLlvTermIcicle.o PnlWzskLlvTermMcvevp.o PnlWzskLlvTermUvbdvk.o PnlWzskLlvCamera.o PnlWzskLlvTtable.o PnlWzskLlvLaser.o

LIB = libcrdwzskllv

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a ${SYSROOT}$(LIBROOT)/wzskcmbd/

clean:
	rm -f *.o
